MACOSX:
	$(MAKE) dynlibs staticlibs bins \
	"ARCH = MACOSX" \
	"COPTO = -fPIC -o " \
	"LOPTO = -fPIC -o " \
	"CC = cc" \
	"CXX = c++" \
	"DEF = -D" \
	"CCFLAGS = -Os -Wall -fPIC -dynamic" \
	"CXXFLAGS = -Os -Wall -fPIC -dynamic" \
	"TCLLDFLAGS = -framework Tcl" \
	"NETCDFLDFLAGS = -lnetcdf " \
	"AR = ar" \
	"NM = nm -p" \
	"RANLIB = ranlib" \
	"SHLD = c++ -bundle" \
	"TCLSHLD = c++ -dynamiclib"

